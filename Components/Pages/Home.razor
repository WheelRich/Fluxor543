@page "/"
@using Fluxor
@using Fluxor.Blazor.Web.Components

@inherits FluxorComponent
@inject IState<ProgState> CurrentState
@inject IDispatcher FluxorDispatcher

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<button onclick="@TestDispatch">Test</button>

@code{

    private void TestDispatch() 
    {
        try
        {
            FluxorDispatcher.Dispatch(new MyAction());
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error dispatching action: {ex.Message}");
        }
    }

}